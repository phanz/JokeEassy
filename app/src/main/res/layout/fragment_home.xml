<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.widgets.NavigatorView
        android:id="@+id/tab_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/tab_fragment_divider"
        android:layout_below="@id/tab_list_layout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_light_gray"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/recommend_view_pager"
        android:layout_below="@id/tab_fragment_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/refresh_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_bg_white"
        android:src="@drawable/ic_refresh_normal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
